<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.yluo.ruisiapp.widget.CircleImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:src="@mipmap/logo_round"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:id="@+id/login_fail_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/copyright"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_login_inner"
            style="@style/btn_pri"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_marginEnd="14dp"
            android:text="校园网入口"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_login_outer"
            style="@style/btn_pri"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_marginStart="14dp"
            android:text="外网入口"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/copyright"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:text="@string/app_name"
        android:textColor="?attr/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/copyright"
        style="@style/text_12_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bbs"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:text="©2016-2017 yluo.me" />

    <TextView
        android:id="@+id/bbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:alpha="0.6"
        android:text="rs.xidian.edu.cn"
        android:textColor="?attr/colorPrimary"
        android:textSize="10sp" />

</RelativeLayout>